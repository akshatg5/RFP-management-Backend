generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RequestForProposal {
  id             String  @id @default(uuid())
  title          String
  rawPrompt      String
  structuredData Json
  budget         Float?
  deliveryDays   Int?
  paymentTerms   String?
  warrantyYears  Int?

  vendors       RFPVendor[]
  proposals     Proposal[]
  inboundEmails InboundEmail[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Data model to record the details about the vendor
model Vendor {
  id    String  @id @default(uuid())
  name  String
  email String  @unique
  notes String?

  rfps          RFPVendor[]
  proposals     Proposal[]
  inboundEmails InboundEmail[]

  createdAt DateTime @default(now())
}

// request for proposal sent to the vendor
model RFPVendor {
  id       String          @id @default(uuid())
  rfpId    String
  vendorId String
  status   RFPVendorStatus @default(SENT)

  rfp    RequestForProposal @relation(fields: [rfpId], references: [id])
  vendor Vendor             @relation(fields: [vendorId], references: [id])

  sentAt DateTime?
}

model Proposal {
  id       String @id @default(uuid())
  rfpId    String
  vendorId String

  rawEmailBody        String
  extractedData       Json
  aiScore             Float?
  aiEvaluation        String?
  usedFallbackParsing Boolean @default(false) // Track if fallback parser was used

  rfp          RequestForProposal @relation(fields: [rfpId], references: [id])
  vendor       Vendor             @relation(fields: [vendorId], references: [id])
  inboundEmail InboundEmail?

  createdAt DateTime @default(now())
}

// Store inbound emails before AI processing to prevent data loss
model InboundEmail {
  id              String  @id @default(uuid())
  emailId         String  @unique // Resend email_id
  from            String
  subject         String
  rawBody         String  @db.Text
  rfpId           String?
  vendorId        String?
  processed       Boolean @default(false)
  processingError String? @db.Text
  proposalId      String? @unique

  createdAt   DateTime  @default(now())
  processedAt DateTime?

  rfp      RequestForProposal? @relation(fields: [rfpId], references: [id])
  vendor   Vendor?             @relation(fields: [vendorId], references: [id])
  proposal Proposal?           @relation(fields: [proposalId], references: [id])

  @@index([rfpId])
  @@index([processed])
  @@index([createdAt])
}

enum RFPVendorStatus {
  DRAFT
  SENT
  RESPONDED
}
